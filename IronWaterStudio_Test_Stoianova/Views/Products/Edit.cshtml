@model IronWaterStudio_Test_Stoianova.Models.ViewModels.ProductEditViewModel
@{
    ViewData["Title"] = Model.Id == 0 ? "Создание продукта" : "Редактирование продукта";
}

<div class="container-fluid">
    <form asp-action="Save" method="post" class="row g-3 editform">
        <div class="col-md-2">
            <input type="hidden" asp-for="Id">
        </div>
        <div class="col-md-4">
            <label asp-for="Name" class="form-label">Название</label>
            <input asp-for="Name" type="text" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
            <div class="input-group mb-3">
                
            </div>
        </div>
        <div class="col-md-3">
            <label asp-for="Description" class="form-label">Описание</label>
            <input asp-for="Description" type="text" class="form-control">
        </div>
        <div class="col-md-3">
            <label asp-for="Price" class="form-label">Цена</label>
            <input asp-for="Price" type="number" step="0.01" class="form-control">
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        
        <div class="d-grid gap-2 d-md-block">
            <button type="submit" class="btn btn-primary">Сохранить изменения</button>
            <button type="submit" asp-action="Index" class="btn btn-secondary">Отменить изменения</button>
        </div>
    </form>
</div>